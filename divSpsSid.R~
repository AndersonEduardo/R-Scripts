###criando as distribuicoes para media ('localizacao') e largura ('range') do nicho
library("evd")
x <- seq(0, 100, length=100)
Fx = evd::pgumbel(x,loc=50,scale=1)
y = dbeta(Fx,shape1=1.5,shape2=1.5,ncp=0.5)
plot(y~x,t='l')

curve(dexp(x,1))
y = dexp(x,0.5)
plot(y~x)

y = dlogis(x,40)
plot(y~x)

y = dgamma(x,20,0.05)
plot(y ~ x, t='l')
